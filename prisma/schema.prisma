// ============================================================================
// ORGANIZATION USERS TABLE
// Links Supabase Auth users to organizations with roles
// ============================================================================

enum OrganizationUserRole {
  super_admin // System-wide admin with access to all organizations
  owner // Organization owner
  admin // Organization admin
  viewer // Organization viewer
}

model OrganizationUser {
  id              String               @id @default(uuid())
  user_id         String // Supabase Auth user ID (auth.users.id)
  organization_id String? // NULL for super_admin, required for others
  role            OrganizationUserRole
  is_primary      Boolean              @default(false) // Main organization for this user
  created_at      DateTime             @default(now()) @db.Timestamptz(6)
  updated_at      DateTime             @updatedAt @db.Timestamptz(6)

  // Relations
  organization Organization? @relation(fields: [organization_id], references: [id], onDelete: Cascade)

  @@unique([user_id, organization_id])
  @@index([user_id])
  @@index([organization_id])
  @@index([role])
  @@index([user_id, is_primary], map: "idx_organization_users_user_primary")
  @@map("organization_users")
}

