generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefClick {
  id             String                @id @default(uuid())
  organization_id String?               // Multi-tenant isolation (nullable for backward compatibility)
  refCode        String
  refSid         String?               @db.VarChar(255)
  customerId     String? // square_customer_id from square_existing_clients
  firstSeenAt    DateTime              @default(now())
  ipHash         String?               @db.VarChar(64)
  userAgent      String?               @db.VarChar(500)
  landingUrl     String?               @db.VarChar(500)
  utmSource      String?               @db.VarChar(100)
  utmMedium      String?               @db.VarChar(100)
  utmCampaign    String?               @db.VarChar(100)
  matched        Boolean               @default(false)
  createdAt      DateTime              @default(now())
  
  // Relations
  organization Organization?        @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  customer     SquareExistingClient? @relation(fields: [customerId], references: [square_customer_id])

  @@index([organization_id])
  @@map("ref_clicks")
}

model GiftCardRun {
  id                String    @id @default(uuid())
  correlation_id    String    @unique
  square_event_id   String?
  square_event_type String?
  trigger_type      String
  resource_id       String?
  stage             String?
  status            String    @default("pending")
  attempts          Int       @default(0)
  last_error        String?
  payload           Json?
  context           Json?
  resumed_at        DateTime? @db.Timestamptz(6)
  created_at        DateTime  @default(now()) @db.Timestamptz(6)
  updated_at        DateTime  @default(now()) @db.Timestamptz(6)

  @@index([square_event_id])
  @@index([status])
  @@map("giftcard_runs")
}

model GiftCardJob {
  id             String            @id @default(uuid())
  correlation_id String
  trigger_type   String
  stage          String
  status         GiftCardJobStatus @default(queued)
  payload        Json
  context        Json?
  attempts       Int               @default(0)
  max_attempts   Int               @default(5)
  scheduled_at   DateTime          @default(now()) @db.Timestamptz(6)
  locked_at      DateTime?         @db.Timestamptz(6)
  lock_owner     String?
  last_error     String?
  created_at     DateTime          @default(now()) @db.Timestamptz(6)
  updated_at     DateTime          @default(now()) @db.Timestamptz(6)

  @@unique([correlation_id, stage], map: "giftcard_jobs_correlation_stage_key")
  @@index([status, scheduled_at], map: "giftcard_jobs_status_scheduled_idx")
  @@map("giftcard_jobs")
}

model WebhookJob {
  id               String           @id @default(uuid())
  organization_id  String           @db.Uuid // Multi-tenant isolation
  event_type       String
  event_id         String
  event_created_at DateTime?        @db.Timestamptz(6)
  status           WebhookJobStatus @default(queued)
  payload          Json
  attempts         Int              @default(0)
  max_attempts     Int              @default(5)
  scheduled_at     DateTime         @default(now()) @db.Timestamptz(6)
  locked_at        DateTime?        @db.Timestamptz(6)
  lock_owner       String?
  last_error       String?
  created_at       DateTime         @default(now()) @db.Timestamptz(6)
  updated_at       DateTime         @default(now()) @db.Timestamptz(6)

  // Relations
  organization Organization @relation(fields: [organization_id], references: [id], onDelete: Cascade)

  @@unique([organization_id, event_id, event_type], map: "webhook_jobs_org_event_unique")
  @@index([organization_id])
  @@index([status, scheduled_at], map: "webhook_jobs_status_scheduled_idx")
  @@map("webhook_jobs")
}

model NotificationEvent {
  id                 String                   @id @default(uuid())
  organization_id    String?                  // Multi-tenant isolation (nullable for backward compatibility)
  channel            NotificationChannel
  templateType       NotificationTemplateType
  status             NotificationStatus       @default(queued)
  customerId         String?
  referrerCustomerId String?
  referralEventId    String?
  externalId         String?                  @db.VarChar(255)
  templateId         String?                  @db.VarChar(255)
  sentAt             DateTime?
  statusAt           DateTime?
  errorCode          String?                  @db.VarChar(255)
  errorMessage       String?
  metadata           Json?
  createdAt          DateTime                 @default(now())

  // Relations
  organization Organization? @relation(fields: [organization_id], references: [id], onDelete: Cascade)

  @@index([organization_id])
  @@index([channel, status, createdAt], map: "notification_channel_status_idx")
  @@map("notification_events")
}

model DevicePassRegistration {
  deviceLibraryIdentifier String
  passTypeIdentifier      String
  serialNumber            String
  pushToken               String?

  // Gift card information
  giftCardGan      String? // Gift Account Number (same as serialNumber typically)
  customerName     String? // Customer name (owner of gift card)
  customerEmail    String? // Customer email
  squareCustomerId String? // Square customer ID
  giftCardId       String? // Square gift card ID
  balanceCents     Int? // Current balance in cents

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([deviceLibraryIdentifier, passTypeIdentifier, serialNumber])
  @@map("device_pass_registrations")
}

model SquareExistingClient {
  id                         String    @id @default(uuid())
  organization_id            String    @db.Uuid // Multi-tenant isolation
  square_customer_id         String    // Remove @unique - now composite with organization_id
  given_name                 String?
  family_name                String?
  email_address              String?
  phone_number               String?
  got_signup_bonus           Boolean?  @default(false)
  activated_as_referrer      Boolean?  @default(false)
  personal_code              String?   // Remove @unique - now composite with organization_id
  created_at                 DateTime? @default(now()) @db.Timestamp(6)
  updated_at                 DateTime? @default(now()) @db.Timestamp(6)
  gift_card_id               String?
  referral_code              String?   // Remove @unique - now composite with organization_id
  referral_url               String?
  total_referrals            Int?      @default(0)
  total_rewards              Int?      @default(0)
  email_sent_at              DateTime? @db.Timestamptz(6)
  first_payment_completed    Boolean?  @default(false)
  ip_addresses               String[]  @default([])
  first_ip_address           String?
  last_ip_address            String?
  used_referral_code         String?
  referral_email_sent        Boolean?  @default(false)
  gift_card_order_id         String?
  gift_card_line_item_uid    String?
  gift_card_delivery_channel String?
  gift_card_activation_url   String?
  gift_card_pass_kit_url     String?
  gift_card_digital_email    String?
  referral_sms_sent          Boolean?  @default(false)
  referral_sms_sent_at       DateTime? @db.Timestamptz(6)
  referral_sms_sid           String?
  gift_card_gan              String?

  // Relations
  organization    Organization     @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  refClicks       RefClick[]
  bookings        Booking[]
  payments        Payment[]
  giftCards       GiftCard[]
  referralProfile ReferralProfile?

  // Composite unique constraints for multi-tenant isolation
  @@unique([organization_id, square_customer_id])
  @@unique([organization_id, personal_code])
  @@unique([organization_id, referral_code])
  
  @@index([organization_id])
  @@index([activated_as_referrer], map: "idx_activated_referrer")
  @@index([gift_card_id], map: "idx_gift_card_id")
  @@index([personal_code], map: "idx_personal_code")
  @@index([referral_code], map: "idx_referral_code")
  @@index([gift_card_delivery_channel], map: "idx_square_clients_gift_card_delivery")
  @@index([gift_card_order_id], map: "idx_square_clients_gift_card_order")
  @@index([square_customer_id], map: "idx_square_customer_id")
  @@map("square_existing_clients")
}

model square_gift_card_gan_audit {
  gift_card_id       String    @id
  square_customer_id String?
  resolved_gan       String?
  verified_at        DateTime? @default(now()) @db.Timestamptz(6)
  raw_payload        Json?
}

// ============================================================================
// GIFT CARDS TABLE
// Supports multiple gift cards per customer (friend bonus + referrer rewards)
// ============================================================================
model GiftCard {
  id                    String             @id @default(uuid())
  organization_id       String // Multi-tenant isolation
  square_customer_id    String
  square_gift_card_id   String             // Remove @unique - now composite with organization_id
  gift_card_gan         String? // Gift Account Number
  reward_type           GiftCardRewardType // FRIEND_SIGNUP_BONUS, REFERRER_REWARD
  initial_amount_cents  Int? // Initial amount when created
  current_balance_cents Int? // Current balance (cached from Square)

  // eGift activation metadata (if activated via Square order)
  gift_card_order_id      String?
  gift_card_line_item_uid String?

  // Delivery/activation details
  delivery_channel String? // square_egift_order, owner_funded_activate, owner_funded_adjust
  activation_url   String? // Square digital card activation URL
  pass_kit_url     String? // Apple/Google Wallet URL
  digital_email    String? // Recipient email from Square

  // Status tracking
  is_active Boolean @default(true)
  state     String? // PENDING, ACTIVE (from Square)

  // Timestamps
  created_at            DateTime  @default(now()) @db.Timestamptz(6)
  updated_at            DateTime  @updatedAt @db.Timestamptz(6)
  last_balance_check_at DateTime? @db.Timestamptz(6) // When balance was last synced from Square

  // Relations
  organization   Organization          @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  customer       SquareExistingClient  @relation(fields: [square_customer_id], references: [square_customer_id])
  transactions   GiftCardTransaction[]
  ReferralReward ReferralReward[]

  // Composite unique constraint for multi-tenant isolation
  @@unique([organization_id, square_gift_card_id])
  
  @@index([organization_id])
  @@index([square_customer_id])
  @@index([square_gift_card_id])
  @@index([gift_card_gan])
  @@index([reward_type])
  @@index([is_active])
  @@map("gift_cards")
}

// ============================================================================
// GIFT CARD TRANSACTIONS TABLE
// Track all gift card activities (create, load, use, refund)
// ============================================================================
model GiftCardTransaction {
  id                   String                  @id @default(uuid())
  organization_id      String                  // Multi-tenant isolation
  gift_card_id         String
  transaction_type     GiftCardTransactionType
  amount_cents         Int // Amount added/used in this transaction
  balance_before_cents Int? // Balance before transaction
  balance_after_cents  Int? // Balance after transaction

  // Reference IDs
  square_activity_id String? // Square gift card activity ID
  square_order_id    String? // Related Square order (if applicable)
  square_payment_id  String? // Related Square payment (if used for payment)

  // Context
  reason        String? // COMPLIMENTARY, REFERRER_REWARD, FRIEND_BONUS, etc.
  context_label String? // Human-readable context

  // Metadata
  metadata Json? // Store raw Square API response for debugging

  created_at DateTime @default(now()) @db.Timestamptz(6)

  // Relations
  organization Organization @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  giftCard      GiftCard     @relation(fields: [gift_card_id], references: [id])

  @@index([organization_id])
  @@index([organization_id, gift_card_id])
  @@index([gift_card_id])
  @@index([transaction_type])
  @@index([created_at])
  @@index([square_activity_id])
  @@map("gift_card_transactions")
}

// ============================================================================
// REFERRAL PROFILES TABLE
// One-to-one with customer, stores referral program participation
// ============================================================================
model ReferralProfile {
  id                 String  @id @default(uuid())
  organization_id    String // Multi-tenant isolation
  square_customer_id String  // Remove @unique - now composite with organization_id
  personal_code      String? // Remove @unique - now composite with organization_id
  referral_code      String? // Remove @unique - now composite with organization_id
  referral_url       String?

  // Status flags
  activated_as_referrer Boolean @default(false)

  // Friend signup tracking
  used_referral_code String? // Referral code they used when signing up (makes them a "friend")

  // Notification tracking
  referral_email_sent  Boolean   @default(false)
  referral_sms_sent    Boolean   @default(false)
  referral_sms_sent_at DateTime? @db.Timestamptz(6)
  referral_sms_sid     String? // Twilio SMS SID

  // Computed fields (can be calculated from ReferralReward table, but cached for performance)
  total_referrals_count Int @default(0) // Aggregated count (for quick queries)
  total_rewards_cents   Int @default(0) // Aggregated total (for quick queries)

  // Timestamps
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  updated_at   DateTime  @updatedAt @db.Timestamptz(6)
  activated_at DateTime? @db.Timestamptz(6) // When activated_as_referrer became true

  // Relations
  organization Organization         @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  customer     SquareExistingClient @relation(fields: [square_customer_id], references: [square_customer_id])
  rewards      ReferralReward[] // All rewards earned as referrer

  // Composite unique constraints for multi-tenant isolation
  @@unique([organization_id, square_customer_id])
  @@unique([organization_id, personal_code])
  @@unique([organization_id, referral_code])
  
  @@index([organization_id])
  @@index([square_customer_id])
  @@index([personal_code])
  @@index([referral_code])
  @@index([used_referral_code])
  @@index([activated_as_referrer])
  @@map("referral_profiles")
}

// ============================================================================
// REFERRAL REWARDS TABLE
// Individual reward records (instead of aggregated totals)
// ============================================================================
model ReferralReward {
  id                   String @id @default(uuid())
  organization_id      String // Multi-tenant isolation
  referrer_customer_id String // Who earned the reward (referrer)
  referred_customer_id String // Who used the referral code (friend)

  // Reward details
  reward_amount_cents Int // Amount earned (typically 1000 = $10)
  status              ReferralRewardStatus @default(PAID)

  // Gift card that received the reward
  gift_card_id String? // GiftCard.id that received the reward

  // Triggering events
  payment_id String? // Payment that triggered the reward (Square payment ID)
  booking_id String? // Booking that triggered the reward (Square booking ID)

  // Context
  reward_type String? // "referrer_reward", "friend_bonus", etc.

  // Metadata
  metadata Json? // Store any additional context

  created_at DateTime  @default(now()) @db.Timestamptz(6)
  paid_at    DateTime? @db.Timestamptz(6) // When reward was actually paid out

  // Relations
  organization Organization    @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  referrer     ReferralProfile @relation(fields: [referrer_customer_id], references: [square_customer_id])
  giftCard     GiftCard?       @relation(fields: [gift_card_id], references: [id])

  @@index([organization_id])
  @@index([referrer_customer_id])
  @@index([referred_customer_id])
  @@index([gift_card_id])
  @@index([payment_id])
  @@index([booking_id])
  @@index([status])
  @@index([created_at])
  @@map("referral_rewards")
}

// ============================================================================
// DASHBOARD TABLES - Main Tables for Dashboard Analytics
// ============================================================================

// ============================================================================
// ORGANIZATIONS TABLE
// Multi-tenant isolation: One Square merchant = one organization
// ============================================================================

model Organization {
  id                 String   @id @default(uuid())
  square_merchant_id String   @unique // Square merchant ID
  name               String? // Organization name
  slug               String?  @unique // URL-friendly slug
  settings           Json?    @default("{}") // Organization settings
  is_active          Boolean  @default(true) // Active status
  created_at         DateTime @default(now()) @db.Timestamptz(6)
  updated_at         DateTime @updatedAt @db.Timestamptz(6)

  // Relations
  locations               Location[]
  square_existing_clients SquareExistingClient[]
  team_members            TeamMember[]
  service_variations      ServiceVariation[]
  bookings                Booking[]
  orders                  Order[]
  order_line_items        OrderLineItem[]
  payments                Payment[]
  payment_tenders         PaymentTender[]
  gift_cards              GiftCard[]
  gift_card_transactions  GiftCardTransaction[]
  ref_clicks              RefClick[]
  notification_events     NotificationEvent[]
  referral_profiles       ReferralProfile[]
  referral_rewards        ReferralReward[]
  organization_users      OrganizationUser[]
  user_roles              UserRole[] // User roles relation
  webhook_jobs            WebhookJob[]

  @@index([square_merchant_id])
  @@index([slug])
  @@map("organizations")
}

// ============================================================================
// LOCATIONS TABLE
// Store location mapping (Square ID to friendly name)
// ============================================================================

model Location {
  id                              String  @id @default(uuid())
  organization_id                 String // Multi-tenant isolation
  square_location_id              String // Square location ID
  square_merchant_id              String? // Square merchant ID (from Square API)
  name                            String // Friendly name (Pacific Ave, Union St)
  address_line_1                  String?
  locality                        String? // City
  administrative_district_level_1 String? // State
  postal_code                     String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  organization Organization @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  bookings     Booking[]
  payments     Payment[]
  orders       Order[]
  user_roles   UserRole[] // User roles relation

  @@unique([organization_id, square_location_id])
  @@index([organization_id])
  @@index([square_merchant_id])
  @@index([square_location_id])
  @@map("locations")
}

// ============================================================================
// TEAM MEMBERS (MASTERS) TABLE
// Active nail technicians/staff members
// ============================================================================

model TeamMember {
  id                    String       @id @default(uuid())
  organization_id       String // Multi-tenant isolation
  square_team_member_id String // Square team member ID
  given_name            String?
  family_name           String?
  email_address         String?
  phone_number          String?
  status                String? // ACTIVE, INACTIVE
  location_code         TeamLocation @default(UNKNOWN_LOC)
  role                  TeamRole     @default(UNKNOWN)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  organization                      Organization     @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  bookings_as_technician            Booking[]        @relation("BookingTechnician")
  bookings_as_administrator         Booking[]        @relation("BookingAdministrator")
  booking_segments_as_technician    BookingSegment[] @relation("BookingSegmentTechnician")
  orders_as_technician              Order[]          @relation("OrderTechnician")
  orders_as_administrator           Order[]          @relation("OrderAdministrator")
  order_line_items_as_technician    OrderLineItem[]  @relation("OrderLineItemTechnician")
  order_line_items_as_administrator OrderLineItem[]  @relation("OrderLineItemAdministrator")
  payments_as_administrator         Payment[]        @relation("PaymentAdministrator")

  @@unique([organization_id, square_team_member_id])
  @@index([organization_id])
  @@index([square_team_member_id])
  @@index([status])
  @@map("team_members")
}

// ============================================================================
// SERVICE VARIATIONS TABLE
// Store service information (fetched from Square API)
// ============================================================================

model ServiceVariation {
  id               String  @id @default(uuid())
  organization_id  String // Multi-tenant isolation
  square_id        String // Square service variation ID
  name             String? // Service name (e.g., "Manicure", "Pedicure")
  service_id       String? // Parent service ID
  duration_minutes Int?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  organization    Organization     @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  bookings        Booking[]
  bookingSegments BookingSegment[]

  @@unique([organization_id, square_id])
  @@index([organization_id])
  @@map("service_variation")
}

// ============================================================================
// BOOKINGS TABLE
// Stores all bookings from booking.created/updated webhooks
// ============================================================================

model Booking {
  id              String @id @default(uuid()) // Internal UUID PK
  organization_id String // Multi-tenant isolation
  booking_id      String // Square booking ID (external identifier)
  location_id     String // Internal UUID FK to locations.id

  // ===== BASIC FIELDS =====
  customer_id   String? // Square customer ID
  location_type String? // BUSINESS_LOCATION
  start_at      DateTime
  status        String // ACCEPTED, CANCELLED, etc.
  all_day       Boolean  @default(false)
  version       Int      @default(0)
  source        String? // THIRD_PARTY_BUYER, FIRST_PARTY_MERCHANT

  // ===== SERVICE FIELDS (from appointment_segments) =====
  service_variation_id      String? // Internal UUID FK to service_variations.id
  service_variation_version BigInt?
  duration_minutes          Int? // Service duration
  intermission_minutes      Int?    @default(0)
  technician_id             String? // Internal UUID FK to team_members.id
  any_team_member           Boolean @default(false)

  // ===== ADDRESS =====
  address_line_1                  String?
  locality                        String? // City
  administrative_district_level_1 String? // State (CA)
  postal_code                     String?

  // ===== CREATOR DETAILS =====
  creator_type        String? // CUSTOMER, STAFF, TEAM_MEMBER
  creator_customer_id String?
  administrator_id    String? // Internal UUID FK to team_members.id

  // ===== MERCHANT =====
  merchant_id String? // Square merchant ID (deprecated, use organization_id)

  // ===== TRANSITION =====
  transition_time_minutes Int? @default(0)

  // ===== NOTES =====
  customer_note String? // Customer's note/request for the booking
  seller_note   String? // Staff/seller note for the booking

  // ===== TIMESTAMPS =====
  created_at DateTime
  updated_at DateTime

  // ===== RAW DATA =====
  raw_json Json? // Immutable source of truth - full booking object from Square API

  // Relations
  organization      Organization          @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  customer          SquareExistingClient? @relation(fields: [customer_id], references: [square_customer_id])
  location          Location              @relation(fields: [location_id], references: [id])
  technician        TeamMember?           @relation("BookingTechnician", fields: [technician_id], references: [id])
  administrator     TeamMember?           @relation("BookingAdministrator", fields: [administrator_id], references: [id])
  service_variation ServiceVariation?     @relation(fields: [service_variation_id], references: [id])
  payments          Payment[]
  orders            Order[]
  order_line_items  OrderLineItem[]
  segments          BookingSegment[]

  @@unique([organization_id, booking_id])
  @@index([organization_id])
  @@index([location_id])
  @@index([customer_id])
  @@index([start_at])
  @@index([status])
  @@index([created_at])
  @@index([booking_id])
  @@map("bookings")
}

// ============================================================================
// BOOKING SEGMENTS TABLE
// Stores one row per appointment segment from Square
// ============================================================================

model BookingSegment {
  id                          String    @id @default(uuid())
  booking_id                  String
  segment_index               Int
  square_segment_uid          String?
  square_service_variation_id String?
  service_variation_id        String?
  service_variation_version   BigInt?
  duration_minutes            Int?
  intermission_minutes        Int?      @default(0)
  square_team_member_id       String?
  technician_id               String?
  any_team_member             Boolean   @default(false)
  booking_version             Int       @default(0)
  is_active                   Boolean   @default(true)
  deleted_at                  DateTime?
  // Booking time fields (from parent booking)
  booking_created_at          DateTime? // When booking was created in Square
  booking_start_at            DateTime? // Scheduled appointment time
  // Row timestamps
  created_at                  DateTime  @default(now())
  updated_at                  DateTime  @updatedAt

  booking          Booking           @relation(fields: [booking_id], references: [id], onDelete: Cascade)
  technician       TeamMember?       @relation("BookingSegmentTechnician", fields: [technician_id], references: [id])
  serviceVariation ServiceVariation? @relation(fields: [service_variation_id], references: [id])

  @@unique([booking_id, segment_index, booking_version])
  @@index([booking_id])
  @@index([service_variation_id])
  @@index([square_service_variation_id])
  @@index([square_team_member_id])
  @@index([is_active])
  @@map("booking_segments")
}

// ============================================================================
// ORDERS TABLE
// Store order information (for discount tracking)
// ============================================================================

model Order {
  id              String  @id @default(uuid()) // Internal UUID PK
  organization_id String // Multi-tenant isolation
  order_id        String // Square order ID (external identifier)
  location_id     String? // Internal UUID FK to locations.id
  customer_id     String? // Square customer ID
  booking_id      String? // Internal UUID FK to bookings.id

  // ===== TEAM MEMBERS =====
  technician_id    String? // Internal UUID FK to team_members.id (who performed the service)
  administrator_id String? // Internal UUID FK to team_members.id (who processed the payment)

  // ===== ORDER FIELDS =====
  state        String? // OPEN, COMPLETED, CANCELED
  version      Int?
  reference_id String?

  // ===== TIMESTAMPS =====
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

