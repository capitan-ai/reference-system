  customer      SquareExistingClient? @relation(fields: [customer_id], references: [square_customer_id])
  booking       Booking?              @relation(fields: [booking_id], references: [id])
  location      Location              @relation(fields: [location_id], references: [id])
  order         Order?                @relation(fields: [order_id], references: [id])
  administrator TeamMember?           @relation("PaymentAdministrator", fields: [administrator_id], references: [id])
  tenders       PaymentTender[]

  @@unique([organization_id, payment_id])
  @@index([organization_id])
  @@index([location_id])
  @@index([order_id])
  @@index([booking_id])
  @@index([customer_id])
  @@index([payment_id])
  @@index([administrator_id])
