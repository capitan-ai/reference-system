{
  "name": "referral-system-salon",
  "buildCommand": "npm run build",
  "installCommand": "npm install && npx prisma generate",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--no-deprecation"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_OPTIONS": "--no-deprecation"
    }
  },
  "crons": [
    {
      "path": "/api/cron/giftcard-jobs",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/webhook-jobs",
      "schedule": "* * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, x-square-hmacsha256-signature, x-square-signature, x-admin-key, x-cron-key"
        }
      ]
    }
  ]
}
